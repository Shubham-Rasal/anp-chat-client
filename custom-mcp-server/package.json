{
  "name": "custom-mcp-server",
  "version": "0.0.1",
  "description": "Custom MCP server with OrbitDB integration",
  "type": "module",
  "scripts": {
    "build": "tsc",
    "build:watch": "tsc --watch",
    "start:mcp": "node dist/index.js",
    "start:orbitdb": "node dist/db/orbitdb-server.js",
    "start:all": "concurrently \"pnpm start:mcp\" \"pnpm start:orbitdb\"",
    "dev": "tsx watch src/index.ts",
    "dev:all": "concurrently \"tsx watch src/index.ts\" \"tsx watch src/db/orbitdb-server.ts\"",
    "test": "vitest",
    "start": "node dist/server.js"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@chainsafe/libp2p-gossipsub": "^14.1.1",
    "@chainsafe/libp2p-noise": "^16.1.3",
    "@chainsafe/libp2p-yamux": "^7.0.1",
    "@libp2p/identify": "^3.0.35",
    "@libp2p/mdns": "^11.0.41",
    "@libp2p/tcp": "^10.1.16",
    "@modelcontextprotocol/sdk": "^1.0.0",
    "@orbitdb/core": "^3.0.2",
    "@orbitdb/core-types": "^1.0.15",
    "@types/express": "^5.0.3",
    "@types/node": "^24.0.1",
    "blockstore-level": "^2.0.3",
    "concurrently": "^8.2.2",
    "dotenv": "^16.5.0",
    "express": "^4.18.2",
    "helia": "^5.4.2",
    "libp2p": "^2.8.11",
    "ts-node": "^10.9.2",
    "typescript": "^5.8.3",
    "winston": "^3.17.0",
    "zod": "^3.25.64"
  },
  "devDependencies": {
    "vitest": "^1.4.0"
  }
}
